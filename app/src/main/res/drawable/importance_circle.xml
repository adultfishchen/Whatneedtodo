<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"
    android:useLevel="false" > //如果要使用LevelListDrawable對象，就要設置為true。設置為true無漸變色。false有漸變色

    //指定内部填充色//
    <solid android:color="@color/materialLightRed" />

    //内部邊距
    <padding
        android:left="2dp"
        android:top="1dp"
        android:right="2dp"
        android:bottom="1dp" />

    //描邊
     <stroke
        android:width="1dp"
        android:color="@android:color/white" />
    <size android:width="25dp"
        android:height="25dp" />
</shape>